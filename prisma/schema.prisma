generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        Int       @id @default(autoincrement())
  title     String
  type      EntryType
  director  String
  budget    Int?
  location  String?
  duration  Int?
  year      Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum EntryType {
  MOVIE
  TV_SHOW
}
